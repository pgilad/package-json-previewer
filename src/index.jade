html.no-js(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title Package.json Previewer
    meta(name='description', content='Web interface to preview your normalized package.json or metadata using normalize-package-data')
    meta(name='keywords', content='web, interface, packge.json, previewer, normalizer')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='author', content='Gilad Peleg')

    link(rel='apple-touch-icon', href='apple-touch-icon.png')
    link(rel='icon', href='images/favicon.ico')
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=PT+Serif:400,700')

    link(rel='stylesheet', href='stylesheets/style.css')
    script(src='scripts/app.js')
