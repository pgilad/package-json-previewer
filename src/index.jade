    .main-wrapper
      header
        h1 Package.json Normalize Previewer
        h3 See your transformed package.json
      section.editor-wrapper
        .left-side.editor
          .actions
            button.load-file(type='file', title='load a json file representing your pacakge.json metadata') Load from file
            button.load-sample(type='button', title='Load a pre-configured sample pacakge.json') Load sample package.json
            button.clear-input(type='button', title='Clear the input and output texts') Clear
          #input-editor.area
        .right-side.editor
          .actions
          #output-editor.area

