*
  box-sizing border-box
  position relative

html, body, h1, h2, h3, h4, h5, h6, button
  font-family: 'PT Serif', serif;

html
  height 100%
  width 100%
  background-color #073642
  color #839496

body
  width 100%
  height 100%
  padding-top 1em
  background-color #073642
  overflow auto

.main-wrapper
  background-color #002b36
  border-left 1px solid #586e75
  border-radius 0.3em
  border-right 1px solid #586e75
  border-top 1px solid #586e75
  display block
  height 100%
  margin 0 auto
  max-width 95%
  padding 0
  position relative

  header
    text-align center

.editor-wrapper
  border 0
  display block
  margin 0 auto
  padding 0
  position relative
  text-align center
  width 100%

  .editor
    float left
    width 50%
    border 0
    padding 0.5em 0
    display inline-block

    .actions
      text-align left
      min-height 1.5em
      button.clear-input
        position absolute
        right 0
  .area
    margin-top 1.5em
    position relative
    overflow auto
    width 100%
    min-height 40em
    text-align left
